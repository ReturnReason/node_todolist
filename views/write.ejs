  <body>
    <div>
      <nav class="nav-container">
        <div class="nav-menu">
          <h1 class="title">TO DO LIST</h1>
          <ul class="nav-menu-items">
            <li><a href="/">HOME</a></li>
            <li><a href="/writing">WRITE</a></li>
            <li><a href="/to-do-list">LIST</a></li>
          </ul>
        </div>
      </nav>

      <div class="main-container">
        <form class="write-list" method="POST" action="/to-do-list">
          <h3>할 일</h3>
          <input type="text" placeholder="할일을 작성해보세요." name="todo" />
          <h3>마감 날짜</h3>
          <input type="date" name="date" />
          <h3>메모</h3>
          <input placeholder="작성할 메모가 있다면?" name="memo" />
          <button class="btn save-btn">저장하기</button>
        </form>
      </div>
    </div>
